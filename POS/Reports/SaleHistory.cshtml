
<!DOCTYPE html>
<html>
<head>
    
        <link rel="preconnect" href="https://fonts.gstatic.com" >
        <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans&display=swap" rel="stylesheet" >
        <style >
        body {
            font-family: 'IBM Plex Sans', sans-serif;
        }
            #dataTable {
                font-family: 'IBM Plex Sans', sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

                #dataTable td, #dataTable th {
                    border: 2px solid #000000;
                    padding: 8px 8px 8px 8px;
                }

            /*#customers tr:nth-child(even){background-color: #f2f2f2;}*/

            /*#customers tr:hover {background-color: #ddd;}*/

                #dataTable th {
                    padding-top: 5px;
                    padding-bottom: 5px;
                    text-align: left;
                    /*  background-color: #373737;
                     color: white;*/
                    color: #373737;
                }

        img {
            width: 70px;
            height: 70px;
        }

        .center {
            margin: auto;
            
            /*  margin: 3rem 5rem 2rem 0rem;*/
            /*margin-right: auto;*/
        }

        #head_table {
       
            border-collapse: collapse;
            margin: 2rem 5rem 2rem 0rem; /* top=1em, right=2em, bottom=3em, left=2em */
        }

        #head_table td {
             
                padding: 8px 8px 8px 8px;
        }
    </style>
</head>
<body>

    <div>

        <div class="center">
            <table class="center">

                <thead>
                    <tr style="text-align:center;">
                        <td style="padding: 8px 8px 8px 8px;"><img src="@(Model.Server + Model.Client.logo)" alt="Image" /></td>
                        <td style=" text-align: center;padding: 8px 8px 8px 8px;">
                            <div style="text-align:center;  ">
                                <h1>@Model.Client.name</h1>
                            </div>
                        </td>
                    </tr>
                </thead>
            </table>
            <table class="center" width=70%>
                <tr><td style="text-align:center; font-size:15px ;"> @Model.Client.address, @Model.Client.thana, @Model.Client.district - @Model.Client.zipcode  </td></tr>
            </table>


        </div>
        <div style=" text-align: right;
        margin: 2rem 0rem 0rem 0rem;">
            <strong> Date : </strong> @Model.Date
        </div>


        <table id="head_table">
            <tr>
                <td><strong> Ref : </strong></td>
                <td>2021/08/75/SaleHistory</td>

            </tr>

            <tr>
                @*<td><strong> USER : </strong></td>
                <td>IKBAL</td>*@
                @*<td><strong> Version : </strong></td>
                <td>@Model.Class_name</td>
                <td><strong> Shift : </strong></td>
                <td>Morning</td>*@
            </tr>
            @*<tr>
                <td><strong> Group : </strong></td>
                <td>None</td>
                <td><strong> Section : </strong></td>
                <td>A</td>
            </tr>*@

        </table>
        <table id="dataTable">
            <thead>
                <tr>

                    <th>SL</th>
                    <th>DATE</th>
                    <th>CUSTOMER</th>
                    <th>INVOICE</th>
                    <th>TOTAL</th>
                    <th>DISCOUNT</th>
                    <th>GRAND TOTAL</th>
                    <th>PAID</th>
                    <th>DUE</th>

                </tr>
            </thead>
            @{ int i = 1;}
            @foreach (var p in Model.SaleList)
            {


        <tr>

            <td>@(i++)</td>
            <td>@p.entry_date.ToString("dd/MM/yy")</td>
            <td>@p.customer_name</td>
            <td>@p.invoice</td>
            <td>@p.total</td>
            <td>@p.discount ( @p.discount_p %)</td>
            <td>@p.grand_total</td>
            <td>@p.payment</td>
            <td>@p.due</td>
        </tr>


            }
        </table>

        </div>

</body>
</html>