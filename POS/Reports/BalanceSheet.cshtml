<!DOCTYPE html>
<html>
<head>
    
        <link rel="preconnect" href="https://fonts.gstatic.com" >
        <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans&display=swap" rel="stylesheet" >
        <style >
        body {
            font-family: 'IBM Plex Sans', sans-serif;
        }
            #students {
                /*   border-collapse: collapse;*/
                border-collapse: collapse;
                width: 100%;
                table-layout: auto;
            }

            #students th {
                /* border: 1px  solid #373737;*/ /* solid #373737*/
                border-bottom: 1px solid #373737;
                padding: 5px 5px 5px 5px;
                text-align:left;
            }
                #students td {
                    /* border: 1px  solid #373737;*/ /* solid #373737*/
                     border-bottom: 1px solid #373737;
                    padding: 5px 5px 5px 5px;
                    text-align: left;
                }
            /*#customers tr:nth-child(even){background-color: #f2f2f2;}*/

            /*#customers tr:hover {background-color: #ddd;}*/

            /*#students th {
                padding: 3px 3px 3px 3px;
                border: 1px solid #373737;*/ /**/
                /*text-align: left;*/
                /*  background-color: #373737;
                color: white;*/
                /*color: #373737;
            }*/

        img {
            width: 70px;
            height: 70px;
        }

        .center {
            margin: auto;
            
            /*  margin: 3rem 5rem 2rem 0rem;*/
            /*margin-right: auto;*/
        }

        body {
            counter-reset: item-counter;
        }

        .item {
            counter-increment: item-counter;
        }

            .item:before {
                content: counter(item-counter, lower-roman) "."; /* by specifying the upper-roman as style the output would be in roman numbers */
            }


        #head_table {
         
            border-collapse: collapse;
            margin: 2rem 5rem 2rem 0rem; /* top=1em, right=2em, bottom=3em, left=2em */
        }

            #head_table td {
             
                padding: 8px 8px 8px 8px;
            }
    </style>
</head>
<body>

    <div>



        <div class="center">
            <table class="center">

                <thead>
                    <tr style="text-align:center;">
                        <td style="padding: 8px 8px 8px 8px;"><img src="@(Model.Server + Model.Client.logo)" alt="Image" /></td>
                        <td style=" text-align: center;padding: 8px 8px 8px 8px;">
                            <div style="text-align:center;  ">
                                <h1>@Model.Client.name</h1>
                            </div>
                        </td>
                    </tr>
                </thead>
            </table>
            <table class="center" width=70%>
                <tr><td style="text-align:center; font-size:15px ;"> @Model.Client.address, @Model.Client.thana, @Model.Client.district - @Model.Client.zipcode  </td></tr>
            </table>


        </div>
        <div style=" text-align: right;
        margin: 2rem 0rem 0rem 0rem;">
            <strong> Date : </strong> @Model.Date
        </div>


        <table id="head_table">
            <tr>
                <td><strong> Ref : </strong></td>
                <td>2020/ 78/ 96/ 47</td>

            </tr>
        </table>
        <table id="head_table">
            <tr>
                <td>Balance Sheet as of <strong>@Model.EndDate.ToString("dd/MM/yy")</strong> </td>


            </tr>


        </table>
        <table id="students">
            <thead>
                <tr>

                    <th>Account Ledger</th>

                    <th style=" text-align: right; ">Debit</th>
                    <th style=" text-align: right;">Credit</th>
                </tr>
            </thead>
            <tr>
                <td style=" text-align: left; border-bottom: 1px solid #373737;"><strong>Assets</strong></td>

            </tr>
            @foreach (var ass in Model.Result.Asset)
            {
                <tr>

                    <td>@ass.account</td>
                    <td style=" text-align: right;">@ass.amount</td>
                    <td style=" text-align: right;"> 0</td>
                </tr>



            }
            <tr>
                <td style=" text-align: left; border-bottom: 1px solid #373737;"><strong>Liabilities</strong></td>

            </tr>
            @foreach (var ass in Model.Result.Liability)
            {
                <tr>

                    <td>@ass.account</td>
                    <td style=" text-align: right;"> 0</td>
                    <td style=" text-align: right;"> @ass.amount</td>
                </tr>



            }
            <tr>
                <td style=" text-align: left; border-bottom: 1px solid #373737;"><strong>Owner's Equity</strong></td>

            </tr>
            @foreach (var ass in Model.Result.OwnersEquity)
            {
                <tr>

                    <td>@ass.account</td>
                    <td style=" text-align: right;"> 0</td>
                    <td style=" text-align: right;"> @ass.amount</td>
                </tr>



            }




            <tr>
                <td colspan="1" style="border-bottom: 0px; text-align: end;"> <strong>Total</strong></td>
                <td colspan="1" style="font-size:18px; border-bottom: 0px; text-align: right; "> <strong><u>@Model.Result.TotalDebit</u></strong></td>
                <td colspan="1" style="font-size:18px; border-bottom: 0px; text-align: right; "><strong><u>@Model.Result.TotalCredit</u> </strong></td>
            </tr>


        </table>

    </div>

</body>
</html>