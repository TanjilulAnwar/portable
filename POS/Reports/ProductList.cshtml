                /*text-align: left;*/
                /*  background-color: #373737;
                color: white;*/
                /*color: #373737;
            }*/

        img {
            width: 70px;
            height: 70px;
        }

        .center {
            margin: auto;
            
            /*  margin: 3rem 5rem 2rem 0rem;*/
            /*margin-right: auto;*/
        }

        body {
            counter-reset: item-counter;
        }

        .item {
            counter-increment: item-counter;
        }

            .item:before {
                content: counter(item-counter, lower-roman) "."; /* by specifying the upper-roman as style the output would be in roman numbers */
            }


        #head_table {
         
            border-collapse: collapse;
            margin: 2rem 5rem 2rem 0rem; /* top=1em, right=2em, bottom=3em, left=2em */
        }

            #head_table td {
             
                padding: 8px 8px 8px 8px;
            }
    </style>
</head>
<body>

    <div>



        <div class="center">
            <table class="center">

                <thead>
                    <tr style="text-align:center;">
                        <td style="padding: 8px 8px 8px 8px;"><img src="@(Model.Server + Model.Client.logo)" alt="Image" /></td>
                        <td style=" text-align: center;padding: 8px 8px 8px 8px;">
                            <div style="text-align:center;  ">
                                <h1>@Model.Client.name</h1>
                            </div>
                        </td>
                    </tr>
                </thead>
            </table>
            <table class="center" width=70%>
                <tr><td style="text-align:center; font-size:15px ;"> @Model.Client.address, @Model.Client.thana, @Model.Client.district - @Model.Client.zipcode  </td></tr>
            </table>


        </div>
        <div style=" text-align: right;
        margin: 2rem 0rem 0rem 0rem;">
            <strong> Date : </strong> @Model.Date
        </div>


        <table id="head_table">
            <tr>
                <td><strong> Ref : </strong></td>
                <td>2020/ 78/ 96/ 47</td>

            </tr>
        </table>
        <table id="head_table">
            @*<tr>
                <td>Balance Sheet as of <strong>@Model.EndDate.ToString("dd/MM/yy")</strong> </td>


            </tr>*@


        </table>
        <table id="students">
            <thead>
                <tr>

                    <th>Name</th>
                    <th>Code</th>
                    <th>Unit Price</th>
                    <th>MRP Price</th>
                    <th>Quantity</th>
                    <th>Description</th>
                </tr>
            </thead>
            @foreach (var prodList in Model.products)
            {
                <tr>
                    <td style=" text-align: left; border-bottom: 1px solid #373737;"><strong>@prodList.category (@prodList.category_code)</strong></td>

                </tr>
                @foreach (var products in prodList.productsL)
                {
        <tr>

            <td>@products.product_name</td>
            <td>@products.product_code</td>
            <td>@products.unit_price</td>
            <td>@products.mrp_price</td>
            <td>@products.quantity</td>
            <td>@products.description</td>
        </tr>



                }
            }


            </table>

    </div>

</body>
</html>